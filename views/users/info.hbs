<nav>
	<ul>
	  <li style="float:right"><a class="active" href="/">Logout</a></li>
	</ul>
</nav>
<div>
	<h2>{{user.username}}'s ToDoList</h2>
	<table border="1" style="width:100%">	
		{{#each toDoList}}
			 <tr id="table">
			    <td><p id="taskname">{{this.taskname}}</p></td>
			    <td><p>{{this.description}}</p></td>
			    <td><a href="/delete/{{id}}"> delete</a></td>	    
	  		</tr>
		{{/each}}
	</table>

	<div id="taskdiv">
		<h2>Add more tasks here:</h2>
		<form action = "/login/{{user.id}}/" method="POST">
			<input type="text" placeholder = "taskname" name="taskname"><br><br>
			<input type="text" placeholder = "description" name="description"><br><br>
			<input type="submit">	
		</form>
	</div>
</div>